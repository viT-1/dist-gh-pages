{
	"root": true,
    "extends": [
		"eslint:recommended",
		"./eslint.rules.json"
    ],
	"env": {
		"es6": true
	},
    "overrides": [
		{
			"files": ["./*.js"],
			"env": {
				"commonjs": true
			}
		},
		{
			"files": ["./src/**/*.js", "./dist/**/*.js"],
			"env": {
				"browser": true
			},
			"parserOptions": {
				"sourceType": "module"
			}
		}
	]
}