{
	"root": true,
    "extends": [
		"eslint:recommended",
		"plugin:import/recommended",
		"./eslint.rules.json"
    ],
	"plugins": ["import", "jest"],
	"settings": {
		"import/resolver": {
			"node": {},
			"typescript": {
				"project": "."
			}
		}
	},
	"env": {
		"es6": true
	},
	"parserOptions": {
		"sourceType": "module"
	},
    "overrides": [
		{
			"files": ["./*.js"],
			"env": {
				"commonjs": true
			}
		},
		{
			"files": ["./src/**/*.js", "./dist/**/*.js"],
			"env": {
				"browser": true
			}
		},
		{
			"files": ["**/*.spec.js"],
			"env": {
				"jest": true
			},
			"extends": ["plugin:jest/all", "plugin:jest-formatting/strict"]
		}
	]
}