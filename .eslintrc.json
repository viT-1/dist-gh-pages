{
	"root": true,
    "extends": [
		"eslint:recommended",
		"plugin:import/recommended",
		"./eslint.rules.json"
    ],
	"plugins": ["import"],
	"settings": {
		"import/resolver": {
			"node": {},
			"typescript": {
				"project": "."
			}
		}
	},
	"env": {
		"es6": true
	},
    "overrides": [
		{
			"files": ["./*.js"],
			"env": {
				"commonjs": true
			}
		},
		{
			"files": ["./src/**/*.js", "./dist/**/*.js"],
			"env": {
				"browser": true
			},
			"parserOptions": {
				"sourceType": "module"
			}
		},
		{
			"files": ["./distnode/**/*.js"],
			"env": {
				"node": true
			},
			"parserOptions": {
				"sourceType": "module"
			}
		}
	]
}