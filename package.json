{
    "name": "dist-gh-pages",
    "version": "0.2.1",
	"description": "Simple project for hosting static gh-pages (SPA further).",
	"keywords": [
		"gh-pages",
		"free hosting",
		"static site"
	],
	"repository": {
        "type": "git",
        "url": "git://github.com/viT-1/dist-gh-pages.git"
    },
	"scripts": {
		"lint": "eslint src/**/*.js && linthtml src/**/*.htmXXX",
		"prebuild": "npm run lint",
		"mkdist": "rm -rf dist && mkdir dist",
		"precopyfiles": "npm run mkdist",
		"copyfiles": "cp -r ./src/** ./dist && rc list=dist/**/*.js",
		"replacestr": "replace-in-file ./dist/index.html,./dist/**/*.js --configFile=./replace-in-file.config.js",
		"build": "npm run copyfiles && npm run replacestr",
		"predeploy": "npm run build",
		"deploy": "gh-pages -d dist"
	},
	"dependencies": {
		"gh-pages": "3.2.2",
		"r-comments": "1.0.2",
		"replace-in-file": "6.3.2"
	},
	"devDependencies": {
		"@linthtml/linthtml": "0.8.4",
		"@linthtml/linthtml-config-recommended": "0.1.0",
		"eslint": "8.5.0"
	}
}