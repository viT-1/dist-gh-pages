{
    "name": "dist-gh-pages",
    "version": "0.1.0",
	"description": "Simple project for hosting static gh-pages (SPA further).",
	"keywords": [
		"gh-pages",
		"free hosting",
		"static site"
	],
	"repository": {
        "type": "git",
        "url": "git://github.com/viT-1/dist-gh-pages.git"
    },
	"scripts": {
		"lint": "eslint **/*.js",
		"prebuild": "npm run lint",
		"mkdist": "rm -rf dist && mkdir dist",
		"copyfiles": "cp ./src/index.html dist/",
		"replacestr": "replace-in-file ./dist/index.html --configFile=./replace-in-file.config.js",
		"build": "npm run mkdist && npm run copyfiles && npm run replacestr",
		"predeploy": "npm run build",
		"deploy": "push-dir --dir=dist --branch=gh-pages"
	},
	"devDependencies": {
		"eslint": "8.5.0",
		"push-dir": "0.4.1",
		"replace-in-file": "6.3.2"
	}
}