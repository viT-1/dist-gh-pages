{
    "name": "dist-gh-pages",
    "version": "0.6.3",
	"description": "Simple project for hosting static gh-pages (SPA further).",
	"keywords": [
		"gh-pages",
		"free hosting",
		"static site",
		"alias",
		"tsconfig paths",
		"esm",
		"ES modules",
		"jest"
	],
	"repository": {
        "type": "git",
        "url": "git://github.com/viT-1/dist-gh-pages.git"
    },
	"scripts": {
		"greet.node": "esm ./dist/main:run",
		"lint": "eslint **/*.js",
		"copyf": "rm -rf dist && cpx ./src/**/!(*.spec).* ./dist",
		"replacestr": "node -r esm ./replace-in-file.js",
		"build": "npm run copyfiles && npm run replacestr && tsc-alias",
		"predeploy": "npm run build",
		"deploy": "gh-pages -d dist",
		"test": "jest --runInBand --no-cache",
		"clj": "jest --clearCache"
	},
	"dependencies": {
		"cpx2": "4.1.2",
		"esm": "3.2.25",
		"esm-cli": "1.1.1",
		"gh-pages": "3.2.3",
		"replace-in-file": "6.3.2",
		"tsc-alias": "1.5.0"
	},
	"devDependencies": {
		"@jest/globals": "27.4.6",
		"eslint": "8.5.0",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-plugin-import": "2.25.3",
		"eslint-plugin-jest": "25.3.4",
		"eslint-plugin-jest-formatting": "3.1.0",
		"eslint-import-resolver-node": "0.3.6",
		"eslint-import-resolver-typescript": "2.5.0",
		"jest": "27.4.7",
		"jest-esm-transformer": "1.0.0",
		"jest-resolver-tsconfig-paths": "0.14.0"
	},
	"jest": {
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.js",
			"!**/*-conf.js",
			"!**/index.js"
		],
		"testMatch": ["<rootDir>/src/**/*.spec.js"],
		"transform": { "\\.m?jsx?$": "jest-esm-transformer" },
		"resolver": "jest-resolver-tsconfig-paths",
		"silent": true
	}
}